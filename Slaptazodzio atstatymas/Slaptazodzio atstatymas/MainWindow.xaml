<Window x:Class="Slaptazodzio_Atkurimas.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Slaptažodžio atkurimas" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Name="SlaptazodisTextBox" Width="120" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left" Background="Transparent"/>
            <Button Name="KoduotiButton" Content="Užkoduoti slaptažodį" Width="120" Margin="10" Click="KoduotiButton_Click" HorizontalAlignment="Left" Background="#FF73F175"/>
            <Label Content="Užkoduotas slaptažodis:" HorizontalAlignment="Left"/>
            <TextBox Name="UzkoduotasTextBox" Width="350" Margin="10" IsReadOnly="True" HorizontalAlignment="Left"/>
            <Button Name="AtkurtiButton" Content="Atkurti slaptažodį" Width="120" Margin="10" Click="AtkurtiButton_Click" HorizontalAlignment="Left" Background="#FFFF6C6C"/>
            <Label Content="Atkurtas slaptažodis:" HorizontalAlignment="Left"/>
            <TextBox Name="AtkurtasTextBox" Width="120" Margin="10" IsReadOnly="True" HorizontalAlignment="Left"/>
            <Label Content="Užduoties vykdymo laikas:" HorizontalAlignment="Left"/>
            <TextBox Name="VykdymoLaikasTextBox" Width="200" Margin="10" IsReadOnly="True" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
